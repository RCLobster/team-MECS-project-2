<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Songs</title>
</head>

<body>
  <video autoplay muted loop id="myVideo">
        <source src="/images/playlistsong.mp4" type="video/mp4">
    </video>

  <h3>All Songs</h3>
  <div class="project-list">
    {{#if songs.length}}
    <div class="row mb-2">

      <table class="table">
        <thead>
          <tr>

            <th scope="col">Song Title</th>
            <th scope="col">Artist</th>
            <th scope="col">Album</th>
          </tr>
        </thead>
        <tbody>
          {{#each songs as |song|}}
          <tr>
            <td>{{song.title}}</td>
            <td>{{song.artist}}</td>
            <td>{{song.album}}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>

    </div>
    {{/if}}
  </div>

</body>

</html>

